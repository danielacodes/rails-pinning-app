<%= render "login_error" %>

<div class="header">
  <h1>Login</h1>
</div>

<%= form_tag('/login', class: "form") do %>

  <div class="form-row row">
    <div class="form-col col-md-6 col-sm-12 form-group">
      <label for="user_email" class="form-label col-xs-2 control-label">Email</label>     
      <div class="col-xs-10">
        <%= text_field_tag 'email', nil, class: "form-field form-control" %>
      </div>
    </div>

    <div class="form-col col-md-6 col-sm-12 form-group">
      <label for="user_password" class="form-label col-xs-2 control-label">Password</label>
      <div class="col-xs-10">
        <%= text_field_tag 'password', nil, class: "form-field form-control" %>
      </div>
    </div>
  </div>

  <div class="form-row row">
    <div class="form-col col-xs-12 form-group">
      <div class="button-col col-md-6 col-sm-12">
        <%= submit_tag "Login", class: "button" %>
      </div>
    </div>
  </div>

<% end %>