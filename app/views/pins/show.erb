<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", @pin.url, html_options = { target: "_blank", class: "url"} %>
  </p>
</div>
<br/>
<div>
<% if @pin.image.attached? %>
  <%= image_tag(@pin.image, size: '300') %>
<% end %>
</div>
<br/>
<div>
<a href="/">
<i class="fa fa-arrow-circle-left"></i>
  Back to Home
</a>

  <%= link_to repin_path(@pin), class: "repin-button", method: "post" do %>
    <i class="fas fa-thumbtack"></i>
    Repin!
  <% end %>  
</div>
